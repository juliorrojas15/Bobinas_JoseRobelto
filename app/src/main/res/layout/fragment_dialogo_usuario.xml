<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialogs.DialogoUsuario">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/strTituloRegistrate"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etRegirtrarCedula"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextCedulaNueva" />
        <EditText
            android:id="@+id/etRegitrarClave"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextClaveNueva"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/etRegistrarConfirmar"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextConfirmarClaveNueva"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:backgroundTint="@color/blue"
            android:text="@string/strButtonRegistrar"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="@string/strOpcion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/strTituloCambiarClave"
            android:layout_margin="2dp"/>

        <EditText
            android:id="@+id/etCambiarCedula"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextCedula" />
        <EditText
            android:id="@+id/etCambiarClaveActual"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextClave"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/etCambiarClaveNueva"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextCambiarClave"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/etCambiarClaveConfirmar"
            style="@style/styClavesUsuario"
            android:hint="@string/strEditTextConfirmarCambiarClave"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:backgroundTint="@color/green"
            android:text="@string/strConfirmarClave"/>
    </LinearLayout>

</FrameLayout>